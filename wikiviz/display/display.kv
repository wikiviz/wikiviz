#:kivy 1.8.0
#:import r random



<UIC>:
	uis: uis


	UISearch:
		id: uis
		size: (5*root.width)/12, root.height/(14)
		pos: root.center_x-self.width/2, root.center_y







<NodeWithBkgrd>:
    node: node1
    canvas:
        Color:
            rgb: (r.random(),r.random(),r.random())

        Ellipse:
            size:self.height*2+25, self.width*2+20
            pos:2*self.pos[0]-self.center_x-11 , 2*self.pos[1]-self.center_y-9

			
    Node:
        id: node1
        size: self.size
        pos: self.pos

    
<Node>:

    canvas:

        
        StencilPush


        Ellipse:
            pos: 2*self.pos[0]-self.center_x , 2*self.pos[1]-self.center_y
            size:  self.height*2, self.width*2


        StencilUse 


        Rectangle:
            texture: self.texture
            pos: 2*self.pos[0]-self.center_x , 2*self.pos[1]-self.center_y
            size: self.height*4, self.width*4

        StencilUnUse

   
        Ellipse:
            pos: 2*self.pos[0]-self.center_x , 2*self.pos[1]-self.center_y
            size:  self.height*2, self.width*2


        StencilPop

<UISearch>:
	search_bar: search
	go_button: go1

	UITextInput:
		id: search
		pos: root.pos
		size: (root.width-root.height), root.height
		font_size: (root.height)-20
		text: 'Search a Word'
		multiline: False
		cursor_blink: False

	UISearchButton:
		id: go1
		pos: root.x+(root.width-root.height), root.y
		size: (root.height), root.height
		text_size: None, None
		texture_size: None, None
		text: 'GO'
		


